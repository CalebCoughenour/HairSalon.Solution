@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Customer>;

<h1>Customers</h1>

@if (@Model.Count == 0)
{
  <h3>Add Customer Below</h3>
} 


@foreach (Customer customer in Model)
{
  <li>@Html.ActionLink($"{customer.Name}", "Details", new { id = customer.CustomerId }) | @customer.Stylist.Name</li>
}
<p>@Html.ActionLink("Add Customer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>